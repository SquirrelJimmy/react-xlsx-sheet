{
  "name": "react-xlsx-sheet",
  "version": "1.0.0",
  "description": "react component for work sheet",
  "repository": {
    "type": "git",
    "url": "https://github.com/sex-squirrel/react-xlsx-sheet.git"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "dist",
    "lib",
    "es"
  ],
  "typings": "lib/index.d.ts",
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0",
    "xlsx": "^0.14.1"
  },
  "scripts": {
    "build:all": "node ./scripts/build.js",
    "build:dist": "cross-env NODE_ENV=production webpack --config ./scripts/webpack.config.js",
    "build:lib": "cross-env BABEL_ENV=lib babel src --extensions '.tsx,.ts' --out-dir ./lib && cross-env BABEL_ENV=lib node ./scripts/copyDts.js",
    "build:es": "cross-env BABEL_ENV=es  babel src --extensions '.tsx,.ts' --out-dir ./es && cross-env BABEL_ENV=es node ./scripts/copyDts.js",
    "test": "jest --coverage",
    "demo": "cross-env NODE_ENV=development webpack-dev-server --config ./demo/webpack.config.js",
    "build:demo": "cross-env NODE_ENV=production webpack --config ./demo/webpack.config.js",
    "release": "./release.sh"
  },
  "keywords": [
    "react-xlsx",
    "excel",
    "export-excel"
  ],
  "author": "zhaibinbin",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-transform-typescript": "^7.3.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.7.7",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.122",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.2",
    "babel-jest": "^24.4.0",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.3.1",
    "jest-dom": "^3.1.2",
    "react-test-renderer": "^16.8.4",
    "react-testing-library": "^6.0.0",
    "ts-jest": "^24.0.0",
    "tslib": "^1.9.3",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.7.4",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1"
  },
  "dependencies": {
    "@types/react-test-renderer": "^16.9.2",
    "lodash": "^4.17.11",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "xlsx": "^0.14.1"
  },
  "type-check": "tsc",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(ts|tsx)": "tslint --fix",
    "**/src/*.+(js|ts|tsx|jsx|)": "prettier --write",
    "*.md": "prettier --write"
  },
  "optionalDependencies": {
    "commitizen": "^4.0.4",
    "cz-emoji": "^1.2.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5"
  }
}
